<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="354dp"
        android:layout_height="582dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tfQ2"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Q2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbBreath" />

        <CheckBox
            android:id="@+id/cbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:text="No"
            app:layout_constraintStart_toEndOf="@+id/cbBreath"
            app:layout_constraintTop_toBottomOf="@+id/cbHead" />

        <TextView
            android:id="@+id/tfquestion"
            android:layout_width="185dp"
            android:layout_height="44dp"
            android:text="Questionnaire"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tfquestion1"
            android:layout_width="321dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:text="Do you have any following Symtoms?"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfQ1" />

        <TextView
            android:id="@+id/tfquestion2"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Do you been Red Zone or traveled outside of Malaysia in past 14 days?"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfQ3" />

        <TextView
            android:id="@+id/tfquestion4"
            android:layout_width="344dp"
            android:layout_height="59dp"
            android:text="Do you have close contact with someone has laboratory-confirmed Covid-19 diagnoisi in past 14 days?"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfQ2" />

        <TextView
            android:id="@+id/tfQ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion" />

        <CheckBox
            android:id="@+id/cbHead"
            android:layout_width="184dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:text="Head or Muscle Aches"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbCough" />

        <CheckBox
            android:id="@+id/cbSoreThroat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="SoreThroat"
            app:layout_constraintStart_toEndOf="@+id/cbCough"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion1" />

        <CheckBox
            android:id="@+id/cbFever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Fever"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toEndOf="@+id/cbSoreThroat"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion1" />

        <CheckBox
            android:id="@+id/cbBreath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Difficulty Breathing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbHead" />

        <RadioGroup
            android:id="@+id/rgYesNo3"
            android:layout_width="73dp"
            android:layout_height="66dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion2">

            <RadioButton
                android:id="@+id/rbQ3Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rbQ3No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgYesNo2"
            android:layout_width="186dp"
            android:layout_height="56dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion4">

            <RadioButton
                android:id="@+id/rbQ2Yes"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rbQ2No"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:id="@+id/tfQ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Q3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgYesNo2" />

        <CheckBox
            android:id="@+id/cbCough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Cough"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion1" />

        <Button
            android:id="@+id/questionNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="56dp"
            android:text="Next"
            app:layout_constraintStart_toEndOf="@+id/rgYesNo3"
            app:layout_constraintTop_toBottomOf="@+id/tfquestion2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>