<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StaffMainActivity">

    <Button
        android:id="@+id/SCCheckInBtn"
        android:layout_width="460dp"
        android:layout_height="54dp"
        android:background="@drawable/button_staff_main"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="Customer Check In"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />

    <Button
        android:id="@+id/btnDashBoardMain"
        android:layout_width="458dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_staff_main"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="View Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStaffRegisMain" />

    <Button
        android:id="@+id/SCCheckInCustomerBtn"
        android:layout_width="448dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_staff_main"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="View Checked In Customer"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SCCheckInBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/viewStoreBtn"
        android:layout_width="450dp"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_staff_main"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="View Store"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SCCheckInCustomerBtn" />

    <Button
        android:id="@+id/btnReportStaffMain"
        android:layout_width="455dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_staff_main"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="Report"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewStoreBtn" />

    <Button
        android:id="@+id/btnStaffRegisMain"
        android:layout_width="472dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_staff_main"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="Register New Staff"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReportStaffMain" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="364dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Midvalley Shopping Mall"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="155dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>