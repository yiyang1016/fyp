<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".uploadStorePicture">

    <Button
        android:id="@+id/btnUploadComfirm"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/distance_tracking_round_button"
        android:text="Upload"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStorePic"
        app:layout_constraintVertical_bias="0.971" />

    <ImageView
        android:id="@+id/ivStorePic"
        android:layout_width="348dp"
        android:layout_height="387dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_staff_main" />

    <Button
        android:id="@+id/btnBackRes"
        android:layout_width="118dp"
        android:layout_height="56dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/distance_tracking_round_button"
        android:text="Back"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnUploadComfirm"
        app:layout_constraintTop_toBottomOf="@+id/ivStorePic" />
</androidx.constraintlayout.widget.ConstraintLayout>